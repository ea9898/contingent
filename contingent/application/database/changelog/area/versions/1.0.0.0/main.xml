            <column name="ID" type="NUMBER" remarks="Идентификатор записи таблицы">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ESU_ID" type="VARCHAR(255)" remarks="Идентификатор записи в сервисе ЕСУ">
