<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>moscow.ptnl.contingent</groupId>
    <artifactId>area-domain</artifactId>
    <version>1.0.0</version>

    <packaging>jar</packaging>

    <name>contingent-area-domain</name>
    <url>http://maven.apache.org</url>

    <parent>
       <groupId>moscow.ptnl.contingent</groupId>
       <artifactId>contingent</artifactId>
       <version>1.0.0</version>
       <relativePath>../pom.xml</relativePath>
    </parent>
    
    <dependencies>
        <dependency>
            <groupId>moscow.ptnl.contingent</groupId>
            <artifactId>common</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${api.slf4j}</version>
            <scope>${artefact.scope}</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>${spring.version}</version>
            <scope>${artefact.scope}</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.data</groupId>
            <artifactId>spring-data-commons</artifactId>
            <version>${spring.data}</version>
            <scope>${artefact.scope}</scope>
        </dependency>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <version>${api.javaee}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-jpamodelgen</artifactId>
            <version>${hibernate.jpamodelgen.version}</version>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources/annotations</source>
                                <source>${project.build.directory}/generated-sources/cxf</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>xjc</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <encoding>UTF-8</encoding>
                            <sources>
                                <source>src/main/resources/META-INF/xsd/nsi</source>
                            </sources>
                            <packageName>moscow.ptnl.contingent2.nsi</packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>xjc2</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <clearOutputDir>false</clearOutputDir>
                            <encoding>UTF-8</encoding>
                            <sources>
                                <source>src/main/resources/META-INF/xsd/esu/AreaEvent.xsd</source>
                            </sources>
                            <packageName>moscow.ptnl.contingent2.area.event</packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>xjc3</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <clearOutputDir>false</clearOutputDir>
                            <encoding>UTF-8</encoding>
                            <sources>
                                <source>src/main/resources/META-INF/xsd/esu/Create–°loseAttachment.xsd</source>
                            </sources>
                            <packageName>moscow.ptnl.contingent2.attachment.disp.event</packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>xjc4</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <clearOutputDir>false</clearOutputDir>
                            <encoding>UTF-8</encoding>
                            <sources>
                                <source>src/main/resources/META-INF/xsd/esu/AttachToDependentArea.xsd</source>
                            </sources>
                            <packageName>moscow.ptnl.contingent2.attachment.deparea.event</packageName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>xjc5</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                        <configuration>
                            <clearOutputDir>false</clearOutputDir>
                            <encoding>UTF-8</encoding>
                            <sources>
                                <source>src/main/resources/META-INF/xsd/esu/AttachOnAreaRelationChange.xsd</source>
                            </sources>
                            <packageName>moscow.ptnl.contingent2.attachment.changedeparea.event</packageName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <version>${cxf.version}</version>
                <executions>
                    <execution>
                        <id>generate-sources</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <wsdlOptions>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/META-INF/wsdl/nsi/ReceiveChangesWS.wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/jaxb-binding.xml</bindingFile>
                                    </bindingFiles>
                                    <serviceName>receive_changes</serviceName>                                                                                                                                               
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/META-INF/wsdl/contingent2/v1/emias.contingent2.v1.wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/jaxb-binding.xml</bindingFile>
                                    </bindingFiles>
                                    <serviceName>AreaService</serviceName>
                                    <extraargs>
                                        <extraarg>-verbose</extraarg>
                                        <extraarg>-p</extraarg>
                                        <extraarg>http://emias.mos.ru/contingent2/core/v1/=ru.mos.emias.contingent2.core</extraarg>
                                        <extraarg>-p</extraarg>
                                        <extraarg>http://emias.mos.ru/contingent2/area/v1/=ru.mos.emias.contingent2.area</extraarg>
                                        <extraarg>-p</extraarg>
                                        <extraarg>http://emias.mos.ru/contingent2/area/v1/types/=ru.mos.emias.contingent2.area.types</extraarg>
                                    </extraargs>
                                </wsdlOption>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/META-INF/wsdl/contingent2/v2/emias.contingent2.v2.wsdl</wsdl>
                                    <bindingFiles>
                                        <bindingFile>${basedir}/src/main/resources/jaxb-binding.xml</bindingFile>
                                    </bindingFiles>
                                    <serviceName>AreaService</serviceName>                                                                                                                                               
                                </wsdlOption>
                            </wsdlOptions>
                        </configuration>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
